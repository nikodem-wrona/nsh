{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "nsh",
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "module": "CommonJS",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node", 
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
